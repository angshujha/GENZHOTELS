<%layout("layout/boilerplate") -%>
<body>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h3><%= listing.title %></h3>
        </div>
    
    <div class="card listing-card col-6 offset-md-2">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="<%= listing.title %>">
  <div class="card-body">
    <p class="card-text">Hosted by: <%= listing.owner ? listing.owner.username : "Unknown" %></p>
    
    <p class="card-text"><%= listing.description %></p>
    <p class="text-muted">
  Rs <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/night
</p>

    <p class="card-text">Country: <%= listing.country %></p>
    <p class="card-text">Location: <%= listing.location %></p>
  </div>
    </div>
   <br> 
   
   <div class="btns col-md-8 offset-md-2 d-flex gap-3">
    <form action="/listings/<%= listing._id %>/edit" method="get">
        <button type="submit" class="add-btn">Edit Listing</button>
    </form>
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
        <button type="submit" class="add-btn">Delete Listing</button>
    </form>
    </div>
    
    <div class="col-md-8 offset-md-2 mt-4 mb-4">
        <hr>
        <h4>leave a review:</h4>
        <form action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation" method="post">
            <div class="form-group">
                <label for="comment">Comment:</label>
                <textarea id="comment" name="review[comment]" class="form-control" required></textarea>
                <div class="invalid-feedback">Please provide a comment.</div>
            </div>
            <div class="valid-feedback">Looks good!</div>
           

            <br>
             <div class="form-group">
                <label for="rating">Rating:</label>
            <fieldset class="starability-slot">
                
                 
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                 <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                 <label for="first-rate1" title="Terrible">1 star</label>
                 <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                 <label for="first-rate2" title="Not good">2 stars</label>
                 <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                 <label for="first-rate3" title="Average">3 stars</label>
                 <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
            <div class="invalid-feedback">Please provide a rating.</div>
        </div>
        <div class="valid-feedback">Looks good!</div>

            <br>
            <button type="submit" class="add-btn">Submit Review</button>
        </form>
        <hr>
        <h4>Reviews:</h4>
        <div>
            <% if (listing.reviews.length === 0) { %>
                <p>No reviews yet.</p>
            <% } else { %>
                <div class="d-flex flex-wrap gap-3 ms-3 mb-3 reviewbox">
                
                <% listing.reviews.forEach(function(review) { %>
                    <div class="mb-3 card p-3">
                        <div class="card-header">
                            <strong>By:</strong> <%= review.author ? review.author.username : "Unknown" %>
                        </div>
                        <div class="card-text">
                            
                            <p class="starability-result" data-rating="<%= review.rating %>">Rated: <%= review.rating %> stars</p>
                            <p><%= review.comment %></p>
                        </div>
                        <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3" method="post">
                            <button type="submit" class="btn btn-danger btn-sm">Delete Review</button>
                        </form>
                    </div>
            
                <% }); %>
                </div>
            <% } %>
        </div>
        
    </div>
</div>

</body>
</html>
    
