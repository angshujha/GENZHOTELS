<%layout("layout/boilerplate") -%>
<div class="row">
        <div class="col-md-6 offset-md-3">
    <h3>Log In to GENZ HOTELS</h3>
    <form method="post" action="/users/login" class="needs-validation" novalidate>
        <div class="mb-3 mt-5">
        <label for="user[username]" class="form-label">Username:</label>
        <input type="text" id="username" name="user[username]" class="form-control" required>
        <div class="invalid-feedback">Please provide your username.</div>   
        </div>
        <div class="valid-feedback">Looks good!</div>
        <div class="mb-3">
        <label for="user[password]" class="form-label">Password:</label>    
        <input type="password" id="password" name="user[password]" class="form-control" required>
        <div class="invalid-feedback">Please provide your password.</div>
        </div>
        <div class="valid-feedback">Looks good!</div>
        <br>
        <button type="submit" class="btn btn-primary add-btn" >Log In</button>
    </form>
    <br><br>
    </div>